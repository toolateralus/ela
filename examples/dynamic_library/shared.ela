#import core;
#import raylib;


DrawCommand :: struct {
  rect: Rectangle;
  color: Color;
}

DrawContext :: struct {
  commands: DrawCommand[];
  inputState: bool[256];
  
  draw :: fn() {
    while commands.length > 0 {
      command := ~commands;
      DrawRectangle((int)command.rect.x, (int)command.rect.y, (int)command.rect.width, (int)command.rect.height, command.color);
    }
  }
}


#alias function :: void(DrawContext*)*;
