{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug current file compilation",
      "program": "${workspaceFolder}/bin/ela",
      "cwd": "${fileDirname}",
      "args": ["${file}"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug current file compilation (tests)",
      "program": "${workspaceFolder}/bin/ela",
      "cwd": "${fileDirname}",
      "args": ["${file}", "--test"]
    },
    {
      "preLaunchTask": "compile_current",
      "type": "lldb",
      "request": "launch",
      "name": "Debug current file",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "cwd": "${fileDirname}"
    },
    {
      "preLaunchTask": "compile_current_test",
      "type": "lldb",
      "request": "launch",
      "name": "Debug current file (tests)",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "cwd": "${fileDirname}"
    },
    
    // If you have an ela_source/dummy.ela you can use these configurations to test
    // miscellaneous problems you may have.
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug dummy",
      "program": "${workspaceFolder}/bin/ela",
      "args": ["dummy.ela", "--s"],
      "cwd": "${workspaceFolder}/ela_source"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug dummy executable",
      "program": "${workspaceFolder}/ela_source/dummy",
      "args": [],
      "cwd": "${workspaceFolder}/ela_source/"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug dummy tests",
      "program": "${workspaceFolder}/bin/ela",
      "args": ["dummy.ela", "--s", "--test"],
      "cwd": "${workspaceFolder}/ela_source"
    },
  ]
}