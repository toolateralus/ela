  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug repro",
      "program": "${workspaceFolder}/bin/ela",
      "args": ["generics.ela"],
      "cwd": "${workspaceFolder}/repro"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug test",
      "program": "${workspaceFolder}/bin/ela",
      "args": ["test.ela",  "--test", "--s"],
      "cwd": "${workspaceFolder}/source"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug dummy",
      "program": "${workspaceFolder}/bin/ela",
      "args": ["dummy.ela", "--s", "--sanitize"],
      "cwd": "${workspaceFolder}/source"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug dummy executable",
      "program": "${workspaceFolder}/dummy",
      "args": [],
      "cwd": "${workspaceFolder}/source"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug dummy tests",
      "program": "${workspaceFolder}/bin/ela",
      "args": ["dummy.ela", "--s", "--test"],
      "cwd": "${workspaceFolder}/source"
    }
  ]
}