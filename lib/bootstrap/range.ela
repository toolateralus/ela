Range_Base :: struct![Value_Type] where Value_Type is SelfEq | Is_Numeric {
  begin: Value_Type,
  end:   Value_Type,
}

#alias Range :: Range_Base![s32];
#alias Range_64 :: Range_Base![s64];

impl![T] Range_Base![T] {
  contains :: fn(self, value: T) -> bool {
    return self.begin <= value && self.end >= value;
  }
}

Range_Enumerator :: struct![Value_Type] where Value_Type is SelfEq | Is_Numeric {
  begin: Value_Type,
  end:   Value_Type,
  idx:   Value_Type,
}

impl![Value_Type] Enumerator![Value_Type] for Range_Enumerator![Value_Type]  {
  current   :: fn(self*) -> Value_Type {
    return self.idx;
  }
  next      :: fn(self*) {
    self.idx++;
  };
  done      :: fn(self*) -> bool {
    return self.idx >= self.end;
  }
}

impl![Value_Type] Enumerable![Range_Enumerator![Value_Type], Value_Type] for Range_Base![Value_Type]  {
  enumerator :: fn(self*) -> Range_Enumerator![Value_Type] {
    return {
      begin: self.begin,
      end:   self.end,
      idx:          0,
    };
  }
}
