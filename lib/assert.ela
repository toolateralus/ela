// TODO: Probably get rid of this. 
// It's so easy for a user to define this.

assert :: (char * message, bool condition) {
  if !condition {
    printf("Assertion failed: %s", message);
    exit(1);
  }
}

assert :: (bool condition) {
  if !condition {
    printf("Assertion failed");
    exit(1);
  }
}